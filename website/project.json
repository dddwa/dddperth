{
    "name": "website",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "website",
    "projectType": "application",
    "tags": [],
    "targets": {
        "panda": {
            "executor": "nx:run-commands",
            "options": {
                "command": [
                    {
                        "command": "pnpm panda",
                        "forwardAllArgs": true
                    }
                ],
                "parallel": false,
                "cwd": "website"
            }
        },
        "parkui": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "pnpx @park-ui/cli",
                        "forwardAllArgs": true
                    }
                ],
                "parallel": false,
                "cwd": "website"
            }
        },
        "setup": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm panda codegen",
                "cwd": "website"
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "node --inspect=127.0.0.1:9600 ./build/server/server.js"
                ],
                "cwd": "website"
            },
            "dependsOn": [
                "build-server"
            ]
        },
        "start-prod": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "node ./server/server.js"
                ],
                "cwd": "website/build"
            }
        },
        "build-remix": {
            "executor": "nx:run-commands",
            "cache": true,
            "inputs": [
                "{projectRoot}/app/**/*.*"
            ],
            "outputs": [
                "{options.outputPath}/build/remix/*.*"
            ],
            "options": {
                "command": "react-router build",
                "cwd": "website"
            }
        },
        "build-server": {
            "executor": "@nx/esbuild:esbuild",
            "cache": true,
            "inputs": [
                "{projectRoot}/server.ts",
                "{projectRoot}/server.init.ts",
                "{projectRoot}/app/**/*.*"
            ],
            "outputs": [
                "{options.outputPath}/**/*.*"
            ],
            "dependsOn": [],
            "options": {
                "platform": "node",
                "outputPath": "website/build/server",
                "assets": [],
                "format": [
                    "esm"
                ],
                "bundle": true,
                "skipTypeCheck": true,
                "declaration": false,
                "main": "website/server.ts",
                "additionalEntryPoints": [
                    "website/server.init.ts"
                ],
                "tsConfig": "website/tsconfig.json",
                "esbuildOptions": {
                    "external": [
                        "../remix/server/index.js",
                        "./server.init.js"
                    ],
                    "target": "node20",
                    "packages": "external",
                    "sourcemap": true,
                    "outExtension": {
                        ".js": ".js"
                    }
                },
                "thirdParty": true
            }
        },
        "build": {
            "executor": "nx:noop",
            "options": {},
            "dependsOn": [
                "build-remix",
                "build-server"
            ]
        }
    }
}
